doctype html
html(lang="en")

head
  link(rel='stylesheet', href='/css/signcss.css')
  include includes/header.pug
body
  include includes/topNav.pug   
  main(class="container")    
    div(id="login-box")
        div(class="left-box")
            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text-muted") Purchase Details
                span(class="badge badge-secondary badge-pill")
 
            ul(class="list-group mb-3")
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Transaction No.
                        small(class="text-muted")
                    span(class="text-muted") 1231231231

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Name
                        small(class="text-muted")
                    span(class="text-muted") Juan Dela Cruz

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Complete Address
                        small(class="text-muted")
                    span(class="text-muted") Sta. Rosa Laguna

            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text-muted") Billing Address
                span(class="badge badge-secondary badge-pill")
 
            ul(class="list-group mb-3")
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Address 1
                        small(class="text-muted")
                    span(class="text-muted") First Address Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Address 2
                        small(class="text-muted")
                    span(class="text-muted") Second Adderss Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") City
                        small(class="text-muted")
                    span(class="text-muted") Insert City Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Province
                        small(class="text-muted")
                    span(class="text-muted") Insert Province Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Zip Code
                        small(class="text-muted")
                    span(class="text-muted") Inser Zip Code Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Name
                        small(class="text-muted")
                    span(class="text-muted") Insert Name Here
                
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Mobile No.
                        small(class="text-muted")
                    span(class="text-muted") Insert Mobile No. Here

            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text-muted") Shipping Address
                span(class="badge badge-secondary badge-pill")
 
            ul(class="list-group mb-3")
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Address 1
                        small(class="text-muted")
                    span(class="text-muted") First Address Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Address 2
                        small(class="text-muted")
                    span(class="text-muted") Second Adderss Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") City
                        small(class="text-muted")
                    span(class="text-muted") Insert City Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Province
                        small(class="text-muted")
                    span(class="text-muted") Insert Province Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Zip Code
                        small(class="text-muted")
                    span(class="text-muted") Inser Zip Code Here

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Name
                        small(class="text-muted")
                    span(class="text-muted") Insert Name Here
                
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Mobile No.
                        small(class="text-muted")
                    span(class="text-muted") Insert Mobile No. Here

        div(class="right-box")
            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text-muted") Checkout Information

            table(class="table")
                    thead
                        tr
                        td
                        td(style="width:298px") Item
                        td(style="width:50px") Quantity
                        td
                        td Price
                        td Total Price
                    tbody
                        tr
                        td 
                            img(
                            style="width: 25px;"
                            src="/images/item.jpg")
                        td S7 Edge
                        td 
                            input(class="form-control" type="number" name="title" v-model="title" value="1")
                        td x
                        td Php 500.00
                        td Php 25,000.00
                        tr
                        td 
                            img(
                            style="width: 25px;"
                            src="/images/item.jpg")
                        td S7 Edge Mahabang Description with color gray and blue and black
                        td 
                            input(class="form-control" type="number" name="title" v-model="title" value="1")
                        td x
                        td Php 500.00
                        td Php 25,000.00
                        tr
                        td 
                        td 
                        td 
                        td 
                        td 
                            b Total Amount
                        td Php 50,000.00

            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text") Payment

            div(class="d-block my-3")
              div(class="custom-control custom-radio")
                input(id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked required)
                label(class="custom-control-label" for="credit") Credit card

              div(class="custom-control custom-radio")
                input(id="debit" name="paymentMethod" type="radio" class="custom-control-input" required)
                label(class="custom-control-label" for="debit") Cash On Delivery

            div(class="row")
              div(class="col-md-6 mb-3")
                label(for="cc-name") Name on card
                input(type="text" class="form-control" id="cc-name" placeholder="" required)
                small(class="text-muted") Full name as displayed on card
                div(class="invalid-feedback")
                  p Name on card is required

              div(class="col-md-6 mb-3")
                label(for="cc-number") Credit card number
                input(type="text" class="form-control" id="cc-number" placeholder="" required)
                div(class="invalid-feedback")
                  p Credit card number is required

            div(class="row")
              div(class="col-md-3 mb-3")
                label(for="cc-expiration") Expiration
                input(type="text" class="form-control" id="cc-expiration" placeholder="" required)
                div(class="invalid-feedback")
                  p Expiration date required

              div(class="col-md-3 mb-3")
                label(for="cc-expiration") CVV
                input(type="text" class="form-control" id="cc-cvv" placeholder="" required)
                div(class="invalid-feedback")
                  p Security code required

            hr(class="mb-4")
            button(class="btn btn-primary btn-lg btn-block" type="submit") Continue to checkout

  include cart.pug

script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
script(src="/js/index.js")
