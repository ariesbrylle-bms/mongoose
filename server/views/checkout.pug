doctype html
html(lang="en")

head
  link(rel='stylesheet', href='/css/signcss.css')
  include includes/header.pug
body
  include includes/topNav.pug   
  main(class="container")    
    div(id="login-box")
        div(class="left-box")
            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text-muted") Purchase Details
                span(class="badge badge-secondary badge-pill")
 
            ul(class="list-group mb-3")
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Name
                        small(class="text-muted")
                    span(class="text-muted") {{ name }}Juan Dela Cruz

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Mobile Number
                        small(class="text-muted")
                    span(class="text-muted") {{mobileNo}} 09175576478

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Complete Address
                        small(class="text-muted")
                    span(class="text-muted") {{address}} Sta. Rosa Laguna

            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text-muted") Billing Address
                span(class="badge badge-secondary badge-pill")
 
            ul(class="list-group mb-3")
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Address 1
                        small(class="text-muted")
                    
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="bAddress1" placeholder="House No. / Floor No. / St. Name")

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Address 2
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="bAddress2" placeholder="Barangay")  

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") City
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="bCity" placeholder="City")

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Province
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="bProvince" placeholder="Province")

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Zip Code
                        small(class="text-muted")
                    span(class="text-muted") 
                        input(type="number" class="form-control" v-model="bZip" placeholder="Postal Code")

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Name
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="bName" placeholder="Bill To")
                
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Mobile No.
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="bMobile" placeholder="Mobile No.")

            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text-muted") Shipping Address
                span(class="badge badge-secondary badge-pill")
 
            ul(class="list-group mb-3")
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Address 1
                        small(class="text-muted")
                    
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="sAddress1" placeholder="House No. / Floor No. / St. Name")

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Address 2
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="sAddress2" placeholder="Barangay")  

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") City
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="sCity" placeholder="City")

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Province
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="sProvince" placeholder="Province")

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Zip Code
                        small(class="text-muted")
                    span(class="text-muted") 
                        input(type="number" class="form-control" v-model="sZip" placeholder="Postal Code")

                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Name
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="sName" placeholder="Bill To")
                
                li(class="list-group-item d-flex justify-content-between lh-condensed")
                    div
                        h6(class="my-0") Mobile No.
                        small(class="text-muted")
                    span(class="text-muted")
                        input(type="text" class="form-control" v-model="sMobile" placeholder="Mobile No.")

        div(class="right-box")
            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text-muted") Checkout Information

            table(class="table")
                    thead
                        tr
                        td
                        td(style="width:298px") Item
                        td(style="width:50px") Quantity
                        td
                        td Price
                        td Total Price
                    tbody
                        tr(v-for="cart in scartData")
                            td 
                                img(v-bind:src="cart.photo"  , alt="", style="max-width:25px; max-height:25px")
                            td {{ cart.name }}
                            td 
                                input(class="form-control" type="number" name="title" v-bind:value="cart.qty" @change="addToCart(cart.productId, cart.price, cart.name, cart.photo ,$event)")
                            td x
                            td {{cart.price | toCurrency}}
                            td {{cart.price * cart.qty | toCurrency}}
                        tr
                            td 
                            td 
                            td 
                            td 
                            td 
                                b Total Amount
                            td
                                span(id="totalAmounts")

            div(class="col-md-4 order-md-2 mb-4")
            h4(class="d-flex justify-content-between align-items-center mb-3")
                span(class="text") Payment

            div(class="d-block my-3")


              div(class="custom-control custom-radio")
                input(id="debit" name="paymentMethod" checked type="radio" class="custom-control-input" required)
                label(class="custom-control-label" for="debit") Cash On Delivery

            hr(class="mb-4")
            button(class="btn btn-primary btn-lg btn-block" type="submit") Continue to checkout
script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
script(src="/js/topNav.js")
script(src="/js/checkout.js")
