doctype html
html(lang="en")

head
  include includes/header.pug
body
  include includes/topNav.pug   
  main(class="container")
    div(class="row")
      div(class="col-md-12 card" style="border: 1px solid rgba(0, 0, 0, 0);")
        div.card-body
          <div class="jumbotron text-center">
            <h1>Login your account</h1>
            p Continue shopping here at Atomic Potato Shop...
          </div>
          div(class="row" id="loginController")
            div(class="col-md-3")
            div(class="col-md-6")
              form(class="center" method="post" id="myForm" v-on:submit.prevent="onSubmit")
                div(class="form-row")
                    div(class="form-group col-md-12")
                        label Username
                        input(type="text" class="form-control" id="username" v-model="username" required="required" placeholder="Username")

                div(class="form-row")
                    div(class="form-group col-md-12")
                        label Password
                        input(type="password" class="form-control" id="password" required="required" v-model="password" placeholder="Password")

                div(class="form-row")
                  div(class="form-group col-md-12")
                    button#btnSignIn(type="submit" class="btn btn-primary col-md-12") Login
            div(class="col-md-3")


script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
script(src="/js/index.js")

