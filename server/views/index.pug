doctype html
html(lang="en")

head
  include includes/header.pug
body
    main(role="main" class="container")
        include includes/topNav.pug
                  
        div#bodyForm(class="panel panel-primary")
                div(class="panel-heading")
                    center
                        h2 Backpacks
                div(class="panel-body") 
                    .row
                        each s in seasons
                            .col
                                center
                                    h4=s
                                        img(
                                            style="width: 100%; padding:5px"
                                            src="/images/item.jpg" 
                                        )
                                        
                                        .form-group
                                            button.btn.btn-lg(type="button"
                                            v-on:click="addToCart" 
                                            style='background-color:transparent;') 
                                                i(class="fa fa-cart-plus") 
                                                span#addCart  Add To Cart

                                            input.form-control.col-sm-4(type="number"
                                            name="title" v-model="title" value="1")
        
        include signup.pug

        button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal") Launch Demo Modal
        div(class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
            div(class="modal-dialog" role="document")
                div(class="modal-content")
                    div(class="modal-header")
                        h5(class="modal-title" id="exampleModalLabel" Modal title)
                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;

                    div(class="modal-body")
                        b Hello
                    div(class="modal-footer")
                        button(type="button" class="btn btn-secondary" data-dismiss="modal") Close
                        button(type="button" class="btn btn-primary") Save Changes
script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")