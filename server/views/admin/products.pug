body
  include ../includes/topNav.pug   
  main(class="container")    
    div(class="row")
      div(class="col-md-12 card" style="padding-right: 0px !important; padding-left: 0px !important")
        div.card-header
          h4 Add Products
        div.card-body
          form
            div(class="form-row")
              div(class="form-group col-md-6")
                label Upload Image
                div(class="input-group")
                    span(class="input-group-btn")
                        button(class="btn btn-success btn-file") Browseâ€¦ 
                          input(type="file" id="imgInp")
                    input(type="text" class="form-control" readonly)
              div(class="form-group col-md-6")
                label Image
                div(class="card" style="max-width : 300px; min-width : 300px; max-height: 300px")
                  div(class="card-body")
                    img(id='img-upload')
            div(class="form-row")
