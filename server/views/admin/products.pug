                    label(for="inputPassword4") Name
                    input(type="password" class="form-control" id="txtMiddleName" placeholder="Middle Name")
            div(class="form-row")
                div(class="form-group col-md-12")
                    label(for="inputAddress") Description
                    textarea(type="text" class="form-control" id="txtEmail" placeholder="juandelacruz@yahoo.com")
            div(class="form-row")
              div(class="form-group col-md-6")
                label(for="inputAddress") Quantity
                input(type="text" class="form-control" id="txtFirstAddress" placeholder="House No. / Floor No. / St. Name")
              
              div(class="form-group col-md-6")
                label(for="inputAddress2") Price
                input(type="text" class="form-control" id="txtSecAddress" placeholder="Barangay")  

            div(class="form-row")
              div(class="form-group col-md-2")
                button#btnSignIn(type="submit" class="btn btn-primary") Save
                span &nbsp
                button#btnSignIn(type="submit" class="btn btn-light") Reset
    <br/>
